%body
  .flash-box
    グループを作成しました

  .wrapper
    .chat-side
      .side-header    
        .side-header__box
          %p.side-header__box__user-name
            test-user
          %ul.side-header__box__menu
            %li.side-header__box__menu__new-group
              =link_to "", class: "side-header__btn" do
                = fa_icon 'edit'
            %li.side-header__box__menu__edit-user
              =link_to "#", class: "side-header__btn" do
                = fa_icon 'cog'
      .groups
        = link_to "#", class: "messages" do
          .group
            %p.group__group-name
              test-group
            %p.group__latest-message
              さようなら
          .group
            %p.group__group-name
              sample-group
            %p.group__latest-message
              hello!
          .group
            %p.group__group-name
              example
            %p.group__latest-message
              まだメッセージはありません

  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
          test-group
        %ul.main-header__left-box__member-list
          member:
          %li.main-header__left-box__member-list__member
            syuji_yamamoto
      .main-header__edit-btn
        = link_to "#", class: "main-header__btn" do
          Edit
    .messages
      .message
        .message__upper-info
          %p.message__upper-info__talker
            test-user
          %p.message__upper-info__date
            2019/09/08(Sun) 16:51:23
        %p.message__text
          こんにちは！
      .message
        .message__upper-info
          %p.message__upper-info__talker
            test-user
          %p.message__upper-info__date
            2019/09/09(Mon) 04:51:23
        %p.message__text
          さようなら
    .form
      %form#new_message.new_message{"accept-charset": "UTF-8", action: "/groups/messages", entype: "multipart/form-data", method: "post"}
        %input{name: "utf-8", type: "hidden", value: "#"}/
        %input{type: "hidden", name: "autenticity_token", value: "#"}
        .input-box
          %input#message-content.input-box__text{placeholder: "type a message", type: "text", name: "message[content]"}
          %label.input-box__image{for: "upload-icon"}
            %i.fa.fa-picture-o
            %input.input-box__image__file{name: "message[image]", type: "file", id: "upload-icon"}/
        %input.submit-btn{"data-disable-with": "Send", name: "commit", type: "submit", value: "Send"}
%body